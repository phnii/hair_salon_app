<h1>スタッフ編集ページ</h1>
<%= err.message %>
<form action="/admin/staffs/<%= staff._id %>/edit" method="POST">
  <div class="name">
    <label for="last">姓</label>
    <input type="text" name="name[last]" value="<%= staff.name.last %>">
    <label for="first">名</label>
    <input type="text" name="name[first]" value="<%= staff.name.first %>">
  </div>
  <div class="mail">
    <label for="email">メールアドレス</label>
    <input type="text" name="email" value="<%= staff.email %>">
  </div>
  <div class="phone">
    <label for="phone">電話番号</label>
    <input type="text" name="phone" value="<%= staff.phone %>">
  </div>
  <input type="hidden" name="role" value="staff">
  <br>
  対応可能メニュー：
  <div class="menus">
    <% for (menu of menus) { %>
      <% if (menu.staffs.includes(staff._id)) { %>
        <input type="checkbox" name="menus[]" value="<%= menu._id %>" checked>
      <% } else { %>
        <input type="checkbox" name="menus[]" value="<%= menu._id %>">
      <% } %>
      <table class="border">
        <tr><th>メニュー名</th><td><%= menu.name %></td></tr>
        <tr><th>価格</th><td><%= menu.price %></td></tr>
        <tr><th>コマ数</th><td><%= menu.unitNum %></td></tr>
      </table>
    <% } %>
  </div>

  <input type="submit" value="登録">
</form>