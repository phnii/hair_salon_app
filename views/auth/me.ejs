<h1>マイページ</h1>

<h3>予約履歴</h3>
<% for (let i = 0; i < user.books.length; i++) { %>
  <div class="border">
  <% if (user.books[i].status === "done") { %>
    <p class="text-danger">済み</p>
  <% } %>
  <table>
    <tr><th><a href="/books/<%= user.books[i]._id %>">予約<%= i %></a></th></tr>
    <tr><th>お客様名</th><td><%= user.name.last + user.name.first %>様</td></tr>
    <tr><th>メニュー</th><td><%= user.books[i].menu.name %></td></tr>
    <tr><th>日付</th><td><%= user.books[i].day.getFullYear() + "年" + (user.books[i].day.getMonth() + 1) + "月" + user.books[i].day.getDate() + "日" %></td></tr>
    <tr><th>開始時間</th><td><%= dateFormat["hm"](user.books[i].getStartTime()) %></td></tr>
    <tr><th>所用時間</th><td><%= user.books[i].menu.unitNum * 30 %>分</td></tr>
    <tr><th>担当スタッフ</th><td><%= user.books[i].staff.name.last + user.books[i].staff.name.first %></td></tr>
  </table>
  </div>
<% } %>