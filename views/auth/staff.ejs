<% let sel = {new: "未実施", done: "終了"}; %>

<h1>スタッフ詳細ページ(管理者用)</h1>
<a href="/auth/admin/staffs/:id/edit"><button>編集ページへ</button></a>
<h3>スタッフ(<%= staff.name.last + staff.name.first %>)の詳細</h3>
<br>

<div class="menus">
  <h4>対応メニュー一覧</h4>
  <ul>
  <% for (menu of menus) { %>
    <li><%= menu.name %></li>
  <% } %>
  </ul>
</div>
<hr>

<div class="current-books">
  <h4>現在の予約一覧</h4>
  <% for (book of books) { %>
  <% if (book.status === "new") { %>
  <table class="border">
    <tr><th>お客様名</th><td><%= book.user.name.last + book.user.name.first %>様</td></tr>
    <tr><th>日付</th><td><%= book.day.getFullYear() + "年" + (book.day.getMonth() + 1) + "月" + book.day.getDate() + "日" %></td></tr>
    <tr><th>開始時間</th><td><%= dateFormat["hm"](book.getStartTime()) %></td></tr>
    <tr><th>所用時間</th><td><%= book.menu.unitNum * 30 %>分</td></tr>
    <tr><th>メニュー</th><td><%= book.menu.name %></td></tr>
    <tr><th>担当スタッフ</th><td><%= book.staff.name.last + book.staff.name.first %></td></tr>
    <tr><th>価格</th><td><%= book.menu.price %>円</td></tr>
    <tr><th>状態</th><td><%= sel[book.status] %></td></tr>
  </table>
  <% } %>
  <% } %>
<hr>
<br>
  <h4>過去の予約一覧</h4>
  <% for (book of books) { %>
  <% if (book.status === "done") { %>
  <table class="border">
    <tr><th>お客様名</th><td><%= book.user.name.last + book.user.name.first %>様</td></tr>
    <tr><th>日付</th><td><%= book.day.getFullYear() + "年" + (book.day.getMonth() + 1) + "月" + book.day.getDate() + "日" %></td></tr>
    <tr><th>開始時間</th><td><%= dateFormat["hm"](book.getStartTime()) %></td></tr>
    <tr><th>所用時間</th><td><%= book.menu.unitNum * 30 %>分</td></tr>
    <tr><th>メニュー</th><td><%= book.menu.name %></td></tr>
    <tr><th>担当スタッフ</th><td><%= book.staff.name.last + book.staff.name.first %></td></tr>
    <tr><th>価格</th><td><%= book.menu.price %>円</td></tr>
    <tr><th>状態</th><td><%= sel[book.status] %></td></tr>
  </table>
  <% } %>
  <% } %>
</div>



